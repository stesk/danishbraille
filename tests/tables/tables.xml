<?xml version="1.0" encoding="UTF-8"?>
<dtbook xmlns="http://www.daisy.org/z3986/2005/dtbook/" xml:lang="da" version="2005-3">
    <head>
        <meta http-equiv="content-Type" content="text/xml;charset=UTF-8"/>
        <link rel="stylesheet" type="text/css" href="tables.css"/>
    </head>
    <book>
        <frontmatter>
            <doctitle>test of table layouts</doctitle>
            <docauthor>nota</docauthor>
        </frontmatter>
        <bodymatter>
            <level1>
                <h1>simple table with data cells only</h1>
                <level2>
                    <h2>by column</h2>
                    <table class="render_by_column">
                        <tr>
                            <td>cell 1.1</td>
                            <td>cell 1.2</td>
                        </tr>
                        <tr>
                            <td>cell 2.1</td>
                            <td>cell 2.2</td>
                        </tr>
                    </table>
                </level2>
                <level2>
                    <h2>by row</h2>
                    <table>
                        <tr>
                            <td>cell 1.1</td>
                            <td>cell 1.2</td>
                        </tr>
                        <tr>
                            <td>cell 2.1</td>
                            <td>cell 2.2</td>
                        </tr>
                    </table>
                </level2>
            </level1>
            <level1>
                <h1>simple tables with headers</h1>
                <level2>
                    <h2>simple table with column headers</h2>
                    <level3>
                        <h3>by column</h3>
                        <table class="render_by_column">
                            <tr>
                                <th>header 1.1</th>
                                <th>header 1.2</th>
                                <th>header 1.3</th>
                            </tr>
                            <tr>
                                <td>cell 2.1</td>
                                <td>cell 2.2</td>
                                <td>cell 2.3</td>
                            </tr>
                        </table>
                    </level3>
                </level2>
                <level2>
                    <h2>simple table with row headers</h2>
                    <level3>
                        <h3>by row</h3>
                        <table>
                            <tr>
                                <th>header 1.1</th>
                                <td>cell 1.2</td>
                                <td>cell 1.3</td>
                            </tr>
                            <tr>
                                <th>header 2.1</th>
                                <td>cell 2.2</td>
                                <td>cell 2.3</td>
                            </tr>
                            <tr>
                                <th>header 3.1</th>
                                <td>cell 3.2</td>
                                <td>cell 3.3</td>
                            </tr>
                        </table>
                    </level3>
                    
                </level2>
                <level2>
                    <h2>simple table with column and row headers</h2>
                    <level3>
                        <h3>by column</h3>
                        <table class="render_by_column">
                            <tr>
                                <th/>
                                <th>header 1.2</th>
                                <th>header 1.3</th>
                                <th>header 1.4</th>
                            </tr>
                            <tr>
                                <th>header 2.1</th>
                                <td>cell 2.2</td>
                                <td>cell 2.3</td>
                                <td>cell 2.4</td>
                            </tr>
                            <tr>
                                <th>header 3.1</th>
                                <td>cell 3.2</td>
                                <td>cell 3.3</td>
                                <td>cell 3.4</td>
                            </tr>
                        </table>
                    </level3>
                    <level3>
                        <h3>by row</h3>
                        <table>
                            <tr>
                                <th/>
                                <th>header 1.2</th>
                                <th>header 1.3</th>
                                <th>header 1.4</th>
                            </tr>
                            <tr>
                                <th>header 2.1</th>
                                <td>cell 2.2</td>
                                <td>cell 2.3</td>
                                <td>cell 2.4</td>
                            </tr>
                            <tr>
                                <th>header 3.1</th>
                                <td>cell 3.2</td>
                                <td>cell 3.3</td>
                                <td>cell 3.4</td>
                            </tr>
                        </table>
                    </level3>
                </level2>
                
            </level1>
            <level1>
                <h1>tables with merged header cells</h1>
                <level2>
                    <h2>table with merged column headers</h2>
                    <level3>
                        <h3>by column</h3>
                        <table class="render_by_column">
                            <tr>
                                <th colspan="2">header 1.1 and 1.2</th>
                                <th colspan="2">header 1.3 and 1.4</th>
                            </tr>
                            <tr>
                                <td>cell 2.1</td>
                                <td>cell 2.2</td>
                                <td>cell 2.3</td>
                                <td>cell 2.4</td>
                            </tr>
                            <tr>
                                <td>cell 3.1</td>
                                <td>cell 3.2</td>
                                <td>cell 3.3</td>
                                <td>cell 3.4</td>
                            </tr>
                        </table>
                    </level3>
                </level2>
                <level2>
                    <h2>table with merged row headers</h2>
                    <level3>
                        <h3>by row</h3>
                        <table>
                            <tr>
                                <th rowspan="2">header 1.1 and 2.1</th>
                                <td>cell 1.2</td>
                                <td>cell 1.3</td>
                            </tr>
                            <tr>
                                <td>cell 2.2</td>
                                <td>cell 2.3</td>
                            </tr>
                            <tr>
                                <th rowspan="2">header 3.1 and 4.1</th>
                                <td>cell 3.2</td>
                                <td>cell 3.3</td>
                            </tr>
                            <tr>
                                <td>cell 4.2</td>
                                <td>cell 4.3</td>
                            </tr>
                        </table>
                    </level3>
                </level2>
                <level2>
                    <h2>table with nested column headers</h2>
                    <level3>
                        <h3>by column</h3>
                        <table class="render_by_column">
                            <tr>
                                <th colspan="2">header 1.1 and 1.2</th>
                                <th>header 1.3</th>
                                <th>header 1.4</th>
                            </tr>
                            <tr>
                                <th>header 2.1</th>
                                <th>header 2.2</th>
                                <th colspan="2">header 2.3 and 2.4</th>
                            </tr>
                            <tr>
                                <td>cell 3.1</td>
                                <td>cell 3.2</td>
                                <td>cell 3.3</td>
                                <td>cell 3.4</td>
                            </tr>
                            <tr>
                                <td>cell 4.1</td>
                                <td>cell 4.2</td>
                                <td>cell 4.3</td>
                                <td>cell 4.4</td>
                            </tr>
                        </table>
                    </level3>
                    
                </level2>
                <level2>
                    <h2>table with nested row headers</h2>
                    <level3>
                        <h3>by row</h3>
                        <table>
                            <tr>
                                <th rowspan="2">header 1.1 and 2.1</th>
                                <th>header 1.2</th>
                                <td>cell 1.3</td>
                                <td>cell 1.4</td>
                            </tr>
                            <tr>
                                <th>header 2.2</th>
                                <td>cell 2.3</td>
                                <td>cell 2.4</td>
                            </tr>
                            <tr>
                                <th rowspan="2">header 3.1 and 4.1</th>
                                <th>header 3.2</th>
                                <td>cell 3.3</td>
                                <td>cell 3.4</td>
                            </tr>
                            <tr>
                                <th>header 4.2</th>
                                <td>cell 4.3</td>
                                <td>cell 4.4</td>
                            </tr>
                        </table>
                    </level3>
                    
                </level2>
                <level2>
                    <h2>table with nested column and row headers</h2>
                    <level3>
                        <h3>by column</h3>
                        <table class="render_by_column">
                            <tr>
                                <th colspan="2"/>
                                <th colspan="2">header 1.3 and 1.4</th>
                                <th>header 1.5</th>
                                <th>header 1.6</th>
                            </tr>
                            <tr>
                                <th colspan="2"/>
                                <th>header 2.3</th>
                                <th>header 2.4</th>
                                <th colspan="2">header 2.5 and 2.6</th>
                            </tr>
                            <tr>
                                <th rowspan="2">header 3.1 and 4.1</th>
                                <th>header 3.2</th>
                                <td>cell 3.3</td>
                                <td>cell 3.4</td>
                                <td>cell 3.5</td>
                                <td>cell 3.6</td>
                            </tr>
                            <tr>
                                <th>header 4.2</th>
                                <td>cell 4.3</td>
                                <td>cell 4.4</td>
                                <td>cell 4.5</td>
                                <td>cell 4.6</td>
                            </tr>
                            <tr>
                                <th rowspan="2">header 5.1 and 6.1</th>
                                <th>header 5.2</th>
                                <td>cell 5.3</td>
                                <td>cell 5.4</td>
                                <td>cell 5.5</td>
                                <td>cell 5.6</td>
                            </tr>
                            <tr>
                                <th>header 6.2</th>
                                <td>cell 6.3</td>
                                <td>cell 6.4</td>
                                <td>cell 6.5</td>
                                <td>cell 6.6</td>
                            </tr>
                        </table>
                    </level3>
                    <level3>
                        <h3>by row</h3>
                        <table>
                            <tr>
                                <th colspan="2"/>
                                <th colspan="2">header 1.3 and 1.4</th>
                                <th>header 1.5</th>
                                <th>header 1.6</th>
                            </tr>
                            <tr>
                                <th colspan="2"/>
                                <th>header 2.3</th>
                                <th>header 2.4</th>
                                <th colspan="2">header 2.5 and 2.6</th>
                            </tr>
                            <tr>
                                <th rowspan="2">header 3.1 and 4.1</th>
                                <th>header 3.2</th>
                                <td>cell 3.3</td>
                                <td>cell 3.4</td>
                                <td>cell 3.5</td>
                                <td>cell 3.6</td>
                            </tr>
                            <tr>
                                <th>header 4.2</th>
                                <td>cell 4.3</td>
                                <td>cell 4.4</td>
                                <td>cell 4.5</td>
                                <td>cell 4.6</td>
                            </tr>
                            <tr>
                                <th rowspan="2">header 5.1 and 6.1</th>
                                <th>header 5.2</th>
                                <td>cell 5.3</td>
                                <td>cell 5.4</td>
                                <td>cell 5.5</td>
                                <td>cell 5.6</td>
                            </tr>
                            <tr>
                                <th>header 6.2</th>
                                <td>cell 6.3</td>
                                <td>cell 6.4</td>
                                <td>cell 6.5</td>
                                <td>cell 6.6</td>
                            </tr>
                        </table>
                    </level3>
                    
                </level2>
            </level1>
        </bodymatter>
    </book>
</dtbook>
